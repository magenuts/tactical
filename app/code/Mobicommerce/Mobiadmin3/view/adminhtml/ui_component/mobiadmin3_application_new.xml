<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mobiadmin3_application_new.mobiadmin3_application_new_data_source</item>
            <item name="deps" xsi:type="string">mobiadmin3_application_new.mobiadmin3_application_new_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Employee Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">mobiadmin3_application_new</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Mobicommerce\Mobiadmin3\Block\Adminhtml\Applications\Edit\Button\BackButton</item>
            <item name="reset" xsi:type="string">Mobicommerce\Mobiadmin3\Block\Adminhtml\Applications\Edit\Button\ResetButton</item>
            <item name="save" xsi:type="string">Mobicommerce\Mobiadmin3\Block\Adminhtml\Applications\Edit\Button\SaveButton</item>
        </item>
    </argument>
    <dataSource name="mobiadmin3_application_new_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Mobicommerce\Mobiadmin3\Model\CreateappDataProvider</argument>
            <argument name="name" xsi:type="string">mobiadmin3_application_new_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="mobicommerce/application/createapp"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="employee_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">App Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        
        <field name="version_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Mobicommerce\Mobiadmin3\Ui\Component\Listing\Column\Versiontype\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">MobiCommerce Version</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="string">002</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Select MobiCommerce version which you want to use for your app. For more info check </item>
                    <item name="additionalInfo" xsi:type="string" translate="false">&lt;a href="http://www.mobicommerce.net/pricing/" target="_blank"&gt;MobiCommerce Packages&lt;/a&gt;</item>
                </item>
            </argument>
        </field>
        
        <field name="appname">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">App Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Based on your app name, the logo will be generated by mobiCommerce cloud server. At the time of publishing the app, we will take the suitable logo from you and add it into your mobile app.</item>
                </item>
            </argument>
        </field>

        <field name="apptheme">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">App Theme</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="default" xsi:type="string">shopper</item>
                </item>
            </argument>
        </field>
        <field name="theme_android">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Theme Android</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="default" xsi:type="string">shopper</item>
                </item>
            </argument>
        </field>
        <field name="theme_ios">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Theme iOS</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="default" xsi:type="string">shopper</item>
                </item>
            </argument>
        </field>

        <field name="store">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Store\Ui\Component\Listing\Column\Store\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Default Mobile Store</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Select the store from the dropdown for which you want to create the mobile app.</item>
                </item>
            </argument>
        </field>
        <field name="appsplash">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Splash Screen</item>
                    <item name="formElement" xsi:type="string">file</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Don't have splash screen ready? Don't worry you can preview the mobile app with a default mobilecommerce splash screen. At the time of publishing the app for users we will take the splash screen from you and add it into your mobile app.</item>
                    <item name="scopeLabel" xsi:type="string">(Height:2048, Width: 1536)</item>
                </item>
            </argument>
        </field>
        <field name="appicon">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">App Icon</item>
                    <item name="formElement" xsi:type="string">file</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Don't have an App icon ready? Don't worry you can preview the mobile app with mobilecommerce icon. At the time of publishing the app for users we will take the App icon from you and add it into your mobile app.</item>
                    <item name="scopeLabel" xsi:type="string">(Height:1024, Width: 1024)</item>
                </item>
            </argument>
        </field>
        <field name="primaryemail">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Email Address</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-email" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Don't worry we do not spam or publish your email address, it will be solely used to create your MobiCommerce support account</item>
                </item>
            </argument>
        </field>
        <field name="phone_country_code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Phone Country Code</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">For eg +91, +1 etc</item>
                </item>
            </argument>
        </field>
        <field name="phone">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Phone Number</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-phoneStrict" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Don't worry we do not share your contact number with any third party, it will be solely used to create your MobiCommerce support account</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>