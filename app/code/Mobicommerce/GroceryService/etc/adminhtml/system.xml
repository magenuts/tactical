<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="grocery_service" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Grocery Service</label>
            <tab>mobicommerce</tab>
            <resource>Mobicommerce_GroceryService::groceryservice</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Grocery Service</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Grocery Service</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>              
            </group>
        </section>
    </system>
</config>
